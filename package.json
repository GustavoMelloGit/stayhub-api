{
  "name": "stayhub-api",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && bun build ./src/index.ts --compile --outfile out",
    "dev": "bun --hot run src/index.ts",
    "start": "bun run ./src/index.ts",
    "lint": "eslint . --fix",
    "db:push": "drizzle-kit push",
    "db:migration": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "tsx": "^4.20.4",
    "typescript-eslint": "^8.39.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "zod": "^4.0.10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
