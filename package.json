{
  "name": "stayhub-api",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && bun build ./src/index.ts --compile --outfile out",
    "dev": "bun --hot run src/index.ts",
    "start": "bun run ./src/index.ts",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:lint": "npm run lint && npm run format",
    "prepare": "husky",
    "db:push": "drizzle-kit push",
    "db:migration": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.3"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "jsonwebtoken": "^9.0.2",
    "node-ical": "^0.20.1",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
